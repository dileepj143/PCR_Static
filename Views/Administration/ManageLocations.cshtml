                                    LoadGrid();
                                    $('#tblLocations_wrapper .dataTables_paginate li').removeClass('active');
                                    var lastPage = $('#tblLocations_wrapper .dataTables_paginate li').length;
                                    lastPage = parseInt(lastPage) - parseInt(2);
                                    $('#tblLocations_wrapper .dataTables_paginate li').eq(lastPage).addClass('active').click();
                                }
                                else {
                                    Notify(String(data), 'top-right', '3000', 'warning', 'fa-warning', true);
                                }
                            },
                            complete: function () {

                            },
                            error: function (jqXHR, exception) {
                                var msg = '';
                                if (jqXHR.status === 0) {
                                    msg = 'Not connect.\n Verify Network.';
                                } else if (jqXHR.status == 404) {
