        function DeleteLocation(LocationID, LocationName) {
            $('.page-sidebar').css('z-index', '0');
            $('.navbar').css('z-index', '200');
            bootbox.confirm({
                title: "Delete",
                message: "Are you sure to delete the location '" + LocationName + "'?",
                buttons: {
                    cancel: {
                        label: '<i class="fa fa-times"></i> Cancel'
                    },
                    confirm: {
                        label: '<i class="fa fa-check"></i> Confirm'
                    }
                }, callback: function (result) {
                    if (result) {
                        $.ajax({
                            type: 'DELETE',
                            url: '/Administration/DeleteLocationByID',
                            data: { LocationID: LocationID },
                            dataType: 'json',
                            success: function (data, statusText, resObject) {

                                if (String(data) == "Location is deleted successfully.") {
                                    //Notify("Location '" + LocationName + "' has been deleted successfully", 'top-right', '3000', 'success', 'fa-check', true);
