@model PCR.Onboarding.UI.Models.Divisions
@{
    ViewData["Title"] = "Super Admin";
}
 <!-- Page Breadcrumb -->
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home themeprimary"></i>
            <a href="index-superadmin.html">Home</a>
        </li>
        <li>
            <a href="managedivisions.html">Manage Divisions</a>
        </li>
        <li class="active">Edit Division</li>
    </ul>
</div>
<!-- /Page Breadcrumb -->
<!-- Page Header -->
<div class="page-header position-relative">
    <div class="header-title">
        <h1 class="themeprimary">
            Edit Division
        </h1>
    </div>
    <!--Header Buttons-->
    <div class="header-buttons">
        <a class="sidebar-toggler" href="#">
            <i class="fa fa-arrows-h"></i>
        </a>
        <a class="refresh" id="refresh-toggler" href="">
            <i class="glyphicon glyphicon-refresh"></i>
        </a>
        <a class="fullscreen" id="fullscreen-toggler" href="#">
            <i class="glyphicon glyphicon-fullscreen"></i>
        </a>
    </div>
    <!--Header Buttons End-->
</div>
<!-- /Page Header -->
<!-- Page Body -->
<div class="page-body">
    <div class="col-lg-12 col-sm-12 col-xs-12" style="padding:0px;">
        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 division-form">
            <form class="form-horizontal col-lg-12 col-md-12 col-sm-12 col-xs-12" role="form" style="margin-top:15px;">
                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 control-label">ID :</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="1" id="inputEmail3">
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right">Phone :</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="9874563210" id="inputEmail3">
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 control-label">Name :</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Division 1" id="inputEmail3">
                    </div>
                </div>

                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right">Address :</label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="422 Alcorn Ave, Dallas, TX 75217" class="form-control" id="inputEmail3">
                    </div>
                </div>
                <div class="form-group col-sm-6 margin-bottom">
                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right">City :</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Dallas" id="inputEmail3">
                    </div>
                </div>
            </form>
            <hr class="location-hr">
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 text-center center-block">
                <button class="btn btn-primary btn-md btnSearch" onclick="location.href='/Administration/ManageDivisions'" id="btnSave">Save</button>
                <button onclick="location.href='/Administration/ManageDivisions'" class="btn btn-warning btn-md btnSearch">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- /Page Body -->

<environment>
    <style>
        ::-webkit-input-placeholder {
            color: #888 !important;
        }

        :-moz-placeholder { /* Firefox 18- */
            color: #888 !important;
        }

        ::-moz-placeholder { /* Firefox 19+ */
            color: #888 !important;
        }

        :-ms-input-placeholder {
            color: #888;
        }

        .form-horizontal .form-group {
            margin-bottom: 8px;
            margin-left: 0px;
            margin-right: 0px;
        }

        .form-horizontal .control-label {
            text-align: left;
        }

        input[type=checkbox] ~ .text {
            line-height: 23px;
        }
    </style>
</environment>
<environment>
    <!--Page Related Scripts-->
    <script src="~/assets/js/inputmask/jasny-bootstrap.min.js"></script>
    <script src="~/assets/js/validation/bootstrapValidator.js"></script>
    <script src="~/assets/js/bootbox/bootbox.js"></script>
    <script src="~/assets/js/toastr/toastr.js"></script>
    <script>
       $(document).ready(function ()
        {
            if ('@TempData["Message"]' != null && '@TempData["Message"]' != "") {
                NotifyMessage('@TempData["Message"]', 'top-right', '1200', 'warning', 'fa-warning', true);
            }
           $("#ddlMasterClient").prop("disabled", true).css("cursor", "default").fadeTo(500, "none");
           $("#ContactPhone").keypress(function (e) {
               if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) { return false; }
               if ($("#ContactPhone").val().length > 9) { return false; }
           });
           
           // Restrict special characters
           //It will allow Underscore(_) symbol,spacebar, backspace and characters only
           $('#DivisionName,#City').keypress(function (e) {
               var regex = new RegExp("^[a-zA-Z_ ]+$");
               var str = String.fromCharCode(!e.charCode ? e.which : e.charCode);
               if (regex.test(str)) {
                   return true;
               }

               e.preventDefault();
               return false;
           });
           //End Restrict special characters
          
        });        
    </script>
</environment>