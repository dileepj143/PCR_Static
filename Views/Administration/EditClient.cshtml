<environment>
    <script src="~/assets/js/jquery.maskedinput.js"></script>
    <script src="~/assets/js/inputmask/jasny-bootstrap.min.js"></script>
    <script src="~/assets/js/validation/bootstrapValidator.js"></script>
    <script src="~/assets/js/bootbox/bootbox.js"></script>
    <script src="~/assets/js/toastr/toastr.js"></script> 

    <script>
        $(document).ready(function () { @*onclick="SendURL('/SuperAdmin/ManageBranding')"*@ 

            $('#txtContactPhone')
            .keydown(function (e) {
                
                var key = e.which || e.charCode || e.keyCode || 0;
                $phone = $(this);

                // Don't let them remove the starting '('
                if ($phone.val().length === 1 && (key === 8 || key === 46)) {
                    $phone.val('(');
                    return false;
                }
                    // Reset if they highlight and type over first char.
                else if ($phone.val().charAt(0) !== '(') {
                    $phone.val('(' + String.fromCharCode(e.keyCode) + '');
                }

                // Auto-format- do not expose the mask as the user begins to type
                if (key !== 8 && key !== 9) {
                    if ($phone.val().length === 4) {
                        $phone.val($phone.val() + ')');
                    }
                    if ($phone.val().length === 5) {
                        $phone.val($phone.val() + ' ');
                    }
                    if ($phone.val().length === 9) {
                        $phone.val($phone.val() + '-');
                    }
                }
                // Allow numeric (and tab, backspace, delete) keys only
                return (key == 8 ||
                        key == 9 ||
                        key == 46 ||
                        (key >= 48 && key <= 57) ||
                        (key >= 96 && key <= 105));
            })


            .bind('focus click', function () {
                $phone = $(this);

                if ($phone.val().length === 0) {
                    $phone.val('(');
                }
                else {
                    var val = $phone.val();
                    $phone.val('').val(val); // Ensure cursor remains at the end
                }
            })
            .blur(function () {
                $phone = $(this);

                if ($phone.val() === '(') {
                    $phone.val('');
                }
            });


            if ($('#txtMailingAddress').val() != null && $('#txtMailingAddress').val() != "" && $('#CorporateAddress').val()==$('#txtMailingAddress').val())
                $('#chkMailingAddress').attr('checked', true);
            if ($('#txtBillingAddress').val() != null && $('#txtMailingAddress').val() != "" && $('#CorporateAddress').val() == $('#txtBillingAddress').val())
                $('#chkBillingAddress').attr('checked', true);

        });
        $('#CorporateAddress').keyup(function () {
            if ($('#chkMailingAddress').is(':checked') == true)
                $('#txtMailingAddress').val($(this).val());
            if ($('#chkBillingAddress').is(':checked') == true)
                $('#txtBillingAddress').val($(this).val());
            if ($(this).val() == "") {
                $('#chkMailingAddress').attr('checked', false);
                $('#chkBillingAddress').attr('checked', false);
            }

        })

        $('#chkMailingAddress').change(function () {
            if ($(this).is(':checked') == true) {
                var corporateAddress = $('#CorporateAddress').val();
                if (corporateAddress != null && corporateAddress != "") {
                    $('#txtMailingAddress').val(corporateAddress);
                    $('#txtMailingAddress').attr('readonly', true);
                }
                else {
                    NotifyMessage("Corporate address is empty please mention corporate address first", 'top-right', '1200', 'warning', 'fa-warning', true);
                    $(this).attr('checked', false);
                }
            }
            else {
                $('#txtMailingAddress').val('');
                $('#txtMailingAddress').attr('readonly', false);
            }
        });

        $('#chkBillingAddress').change(function () {
            if ($(this).is(':checked') == true) {
                var corporateAddress = $('#CorporateAddress').val();
                if (corporateAddress != null && corporateAddress != "") {
                    $('#txtBillingAddress').val(corporateAddress);
                    $('#txtBillingAddress').attr('readonly', true);
                }
                else {
                    NotifyMessage("Corporate address is empty please mention corporate address first", 'top-right', '1200', 'warning', 'fa-warning', true);
                    $(this).attr('checked', false);
                }
            }
            else {
                $('#txtBillingAddress').val('');
                $('#txtBillingAddress').attr('readonly', false);
            }
        });

    </script>
</environment>