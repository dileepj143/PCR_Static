}
<!-- Page Breadcrumb -->
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home themeprimary"></i>
            @if (ViewBag.RoleID == 1)
            {
            <a href="/SuperAdmin/Index">Dashboard</a>
            }
            else if (ViewBag.RoleID == 2)
            {
            <a href="/ClientAdmin/Index">Dashboard</a>
            }
            else if (ViewBag.RoleID == 3)
            {
            <a href="/Manager/Index">Dashboard</a>
            }
            else
            {
            <a href="/Employee/I9categories">Dashboard</a>
            }
        </li>
        <li>
            <a href="@Url.Action("ManageLocations","Administration")">Manage Locations</a>
        </li>
        <li class="active">Add Location</li>
    </ul>
</div>
<!-- /Page Breadcrumb -->
<!-- Page Header -->
<div class="page-header position-relative">
    <div class="header-title">
        <h1 class="themeprimary">
            Add Location
        </h1>
    </div>
    <!--Header Buttons-->
    <div class="header-buttons">
        <a class="sidebar-toggler" href="#">
            <i class="fa fa-arrows-h"></i>
        </a>
        <a class="refresh" id="refresh-toggler" href="">
            <i class="glyphicon glyphicon-refresh"></i>
        </a>
        <a class="fullscreen" id="fullscreen-toggler" href="#">
            <i class="glyphicon glyphicon-fullscreen"></i>
        </a>
    </div>
    <!--Header Buttons End-->
</div>
<!-- /Page Header -->
<!-- Page Body -->
<div class="page-body">
    <div class="col-lg-12 col-sm-12 col-xs-12" style="padding:0px;">
        <div class="division-form">
            <form class="form-horizontal col-lg-12 col-sm-12 col-xs-12" role="form" style="margin-top:15px;">
                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 col-md-5 col-lg-4 col-lg-offset-1 control-label no-padding-right">Location Name :<sup style="color:red;">*</sup></label>
                    <div class="col-sm-6 col-md-7">
                        <input type="text" class="form-control" id="inputEmail3">
                    </div>
                </div>

                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 col-md-5 col-lg-4 col-lg-offset-1 control-label no-padding-right">Location # :<sup style="color:red;">*</sup></label>
                    <div class="col-sm-6 col-md-7">
                        <input type="text" class="form-control" id="inputEmail3">
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 col-md-5 col-lg-4 col-lg-offset-1 control-label no-padding-right">Legal Name :</label>
                    <div class="col-sm-6 col-md-7">
                        <input type="text" class="form-control" id="inputEmail3">
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 col-md-5 col-lg-4 col-lg-offset-1 control-label no-padding-right">District :</label>
                    <div class="col-sm-6 col-md-7">
                        <select class="form-select form-control">
                            <option value="1">Select District</option>
                            <option value="2">District 1</option>
                            <option value="3">District 2</option>
                        </select>
                    </div>
                </div>

                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 col-md-5 col-lg-4 col-lg-offset-1 control-label no-padding-right">City :</label>
                    <div class="col-sm-6 col-md-7">
                        <input type="text" class="form-control" id="inputEmail3">
                    </div>
                </div>

                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 col-md-5 col-lg-4 col-lg-offset-1 control-label no-padding-right">Address :</label>
                    <div class="col-sm-6 col-md-7">
                        <input type="text" class="form-control" id="inputEmail3">
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 col-md-5 col-lg-4 col-lg-offset-1 control-label no-padding-right">Phone :</label>
                    <div class="col-sm-6 col-md-7">
                        <input type="text" class="form-control" id="inputEmail3">
                    </div>
                </div>

                <div class="form-group col-sm-6">
                    <label for="inputEmail3" class="col-sm-6 col-md-5 col-lg-4 col-lg-offset-1 control-label no-padding-right">Zipcode :</label>
                    <div class="col-sm-6 col-md-7">
                        <input type="text" data-mask="99999" class="form-control">
                    </div>
                </div>
            </form>
            <hr class="location-hr">
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 text-center center-block">
                <button onclick="location.href='/Administration/ManageLocations'" class="btn btn-primary btn-md btnSearch">Save</button>
                <button onclick="location.href = '/Administration/ManageLocations'" class="btn btn-warning btn-md btnSearch">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- /Page Body -->

<environment>
    <style>
        ::-webkit-input-placeholder {
            color: #888 !important;
        }

        :-moz-placeholder { /* Firefox 18- */
            color: #888 !important;
        }

        ::-moz-placeholder { /* Firefox 19+ */
            color: #888 !important;
        }

        :-ms-input-placeholder {
            color: #888;
        }

        .form-horizontal .form-group {
            margin-bottom: 8px;
        }

        .form-horizontal .control-label {
            text-align: left;
        }
    </style>
</environment>
<environment>
    <!--Page Related Scripts-->
    <script src="~/assets/js/inputmask/jasny-bootstrap.min.js"></script>
    <script src="~/assets/js/validation/bootstrapValidator.js"></script>
    <script src="~/assets/js/bootbox/bootbox.js"></script>
    <script src="~/assets/js/toastr/toastr.js"></script>
    <script src="~/assets/js/inputmask/jasny-bootstrap.min.js"></script>
    <script>

        $(document).ready(function () {
            if ('@TempData["Message"]' != null && '@TempData["Message"]' != "") {
                Notify('@TempData["Message"]', 'top-right', '5000', 'warning', 'fa-warning', true);
            }

            $("#PhoneNumber").keypress(function (e) {
                if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                    return false;
                }
                if ($("#PhoneNumber").val().length > 9) {
                    return false;
                }
            });
            $("#ZipCode").keypress(function (e) {
                if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                    return false;
                }
                if ($("#ZipCode").val().length > 4) {
                    return false;
                }
            });
            // To accept alphabets only.
            $('#City').keydown(function (e) {
                if (e.ctrlKey || e.altKey) {
                    //e.shiftKey ||
                    e.preventDefault();
                } else {
                    var key = e.keyCode;
                    if (!((key == 8) || (key == 32) || (key == 46) || (key >= 35 && key <= 40) || (key >= 65 && key <= 90) || (key == 9))) {
                        e.preventDefault();
                    }
                }
            });

            // Restrict special characters
            // It will allow Underscore(_) symbol and characters only
            $('#LocationName').keypress(function (e) {
                var regex = new RegExp("^[a-zA-Z_ ]+$");
                var str = String.fromCharCode(!e.charCode ? e.which : e.charCode);
                if (regex.test(str)) {
                    return true;
                }

                e.preventDefault();
                return false;
            });
            // Restrict special characters
            // It will allow numbers only
            $("#LocationNumber").keypress(function (e) {
                if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                    return false;
                }
                if ($("#LocationNumber").val().length > 9) {
                    return false;
                }
            });
            //End Restrict special characters

        });

    </script>


</environment>
