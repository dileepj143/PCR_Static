@model PCR.Onboarding.UI.Models.Districts
@{
    ViewData["Title"] = "Super Admin";
}
 <!-- Page Breadcrumb -->
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home themeprimary"></i>
            @if (ViewBag.RoleID == 1)
            {
                <a href="/SuperAdmin/Index">Dashboard</a>
            }
            else if (ViewBag.RoleID == 2)
            {
                <a href="/ClientAdmin/Index">Dashboard</a>
            }
            else if (ViewBag.RoleID == 3)
            {
                <a href="/Manager/Index">Dashboard</a>
            }
            else
            {
                <a href="/Employee/I9categories">Dashboard</a>
            }
        </li>
        <li>
            <a href="/Administration/ManageDistricts">Manage Districts</a>
        </li>
        <li class="active">Edit District</li>
    </ul>
</div>
<!-- /Page Breadcrumb -->
<!-- Page Header -->
<div class="page-header position-relative">
    <div class="header-title">
        <h1 class="themeprimary">
            Edit District
        </h1>
    </div>
    <!--Header Buttons-->
    <div class="header-buttons">
        <a class="sidebar-toggler" href="#">
            <i class="fa fa-arrows-h"></i>
        </a>
        <a class="refresh" id="refresh-toggler" href="">
            <i class="glyphicon glyphicon-refresh"></i>
        </a>
        <a class="fullscreen" id="fullscreen-toggler" href="#">
            <i class="glyphicon glyphicon-fullscreen"></i>
        </a>
    </div>
    <!--Header Buttons End-->
</div>
<!-- /Page Header -->
<!-- Page Body -->
<div class="page-body">
    <div class="col-lg-12 col-sm-12 col-xs-12" style="padding:0px;">
        <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12 division-form">
            <form class="form-horizontal col-lg-12 col-sm-12 col-xs-12" role="form" style="margin-top:15px;">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 col-sm-offset-3 col-md-2 col-lg-1 col-xs-12 col-md-offset-3 col-lg-offset-4 control-label employee-inputcol">ID :</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" id="inputEmail3" value="5">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 col-sm-offset-3 col-md-2 col-lg-1 col-xs-12 col-md-offset-3 col-lg-offset-4 control-label employee-inputcol">State :</label>
                    <div class="col-sm-3">
                        <select class="form-control">
                            <option value="0">Select State</option>
                            <option value="1" selected>Alabama</option>
                            <option value="2">Alaska</option>
                        </select>
                    </div>
                </div>
                <div class="form-group margin-bottom">
                    <label for="inputEmail3" class="col-sm-3 col-sm-offset-3 col-md-2 col-lg-1 col-xs-12 col-md-offset-3 col-lg-offset-4 control-label employee-inputcol">Title :</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" id="inputEmail3" value="5th District">
                    </div>
                </div>
            </form>
            <hr class="location-hr" />
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 text-center center-block">
                <button onclick="location.href = '/Administration/ManageDistricts'" class="btn btn-primary btn-md btnSearch">Save</button>
                <button onclick="location.href = '/Administration/ManageDistricts'" class="btn btn-warning btn-md btnSearch">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- /Page Body -->

