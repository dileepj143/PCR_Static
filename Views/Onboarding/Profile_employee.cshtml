@model I9Document
@{
    ViewData["Title"] = "Employee Profile";
}
<!-- Page Breadcrumb -->
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home themeprimary"></i>
            @if (ViewBag.RoleID == 1)
            {
                <a href="/SuperAdmin/Index">Dashboard</a>
            }
            else if (ViewBag.RoleID == 2)
            {
                <a href="/ClientAdmin/Index">Dashboard</a>
            }
            else if (ViewBag.RoleID == 3)
            {
                <a href="/Manager/Index">Dashboard</a>
            }
            else
            {
                <a href="/Employee/I9categories">Dashboard</a>
            }
        </li>
        <li class="active">Employee Profile</li>
    </ul>
</div>
<!-- /Page Breadcrumb -->
<!-- Page Header -->
<div class="page-header position-relative">
    <div class="header-title">
        <h1 class="themeprimary">
            Employee Profile
        </h1>
    </div>
    <!--Header Buttons-->
    <div class="header-buttons">
        <a class="sidebar-toggler" href="#">
            <i class="fa fa-arrows-h"></i>
        </a>
        <a class="refresh" id="refresh-toggler" href="">
            <i class="glyphicon glyphicon-refresh"></i>
        </a>
        <a class="fullscreen" id="fullscreen-toggler" href="#">
            <i class="glyphicon glyphicon-fullscreen"></i>
        </a>
    </div>
    <!--Header Buttons End-->
</div>
<!-- /Page Header -->
<!-- Page Body -->
<div class="page-body">
    <div class="row">
        <div class="col-md-12">
            <div class="profile-container">
                <div class="profile-header row">
                    <div class="col-lg-2 col-md-4 col-sm-12 text-center">
                        <img src="assets/img/avatars/adam-jansen.jpg" alt="" class="header-avatar" />
                    </div>
                    <div class="col-lg-5 col-md-8 col-sm-12 profile-info">
                        <div class="header-fullname" id="dvfullname">Olivia Abigail Abigail</div>

                        <div class="header-information" id="dvuserheader">

                        </div>
                    </div>

                </div>
                <div class="profile-body">
                    <div class="tabbable">
                        <ul class="nav nav-tabs tabs-flat  nav-justified" id="myTab11">
                            <li class="active">
                                <a data-toggle="tab" href="#profileinfo">
                                    Profile
                                </a>
                            </li>
                            <li class="tab-yellow">
                                <a data-toggle="tab" href="#editprofile">
                                    Edit Profile
                                </a>
                            </li>
                            <li class="tab-red" id="changepwdtab">
                                <a data-toggle="tab" href="#changepwd">
                                    Change Password
                                </a>
                            </li>
                            <!--li class="tab-palegreen">
                                <a data-toggle="tab" id="contacttab" href="#contacts">
                                    Contacts
                                </a>
                            </li-->

                        </ul>
                        <div class="tab-content tabs-flat">
                            <div id="profileinfo" class="tab-pane active">
                                <form role="form" id="gridtab">
                                    <div class="col-sm-12">
                                        <div class="form-title">
                                            <h5><strong>Profile Information</strong></h5>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6  control-label no-padding-right employee-inputcol">Email Address :</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p>raju533406@gmail.com</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right employee-inputcol">Password :</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p>********</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right employee-inputcol">Role :</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p>Employee</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-title">
                                            <h5><strong>Personal Information</strong></h5>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right employee-inputcol">First Name :</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p id="dvfirstname">Abigail</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right employee-inputcol">Last Name :</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p id="dvlastname">Olivia</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right employee-inputcol">Gender :</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p id="dvgender">-</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right employee-inputcol">Phone :</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p id="dvphone">-</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right employee-inputcol">Mobile :</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p id="dvmobile">-</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-title">
                                            <h5><strong>Contact Information</strong></h5>
                                        </div>
                                        <div class="row profile-data">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right employee-inputcol">Address 1 :</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p id="dvadd1">-</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row profile-data">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right employee-inputcol">City:</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p id="dvcity">-</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row profile-data">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right employee-inputcol">State:</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p id="dvstate">-</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row profile-data">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-6 control-label no-padding-right employee-inputcol">Zipcode:</label>
                                                    <div class="col-sm-4 col-sm-offset-1">
                                                        <p id="dvzip">-</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>

                            <div id="editprofile" class="tab-pane">
                                <form role="form" id="Edittab">
                                    <div class="form-title">
                                        <h5><strong>Personal Information</strong></h5>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="input-icon icon-right">
                                                    <input type="text" class="form-control name" placeholder="Abigail" id="editfirstname" data-toggle="tooltip" data-placement="right" data-original-title="FirstName">

                                                    <i class="fa fa-user green"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="input-icon icon-right">
                                                    <input type="text" class="form-control name" placeholder="Olivia" id="editlastname" data-toggle="tooltip" data-placement="left" data-original-title="LastName">
                                                    <i class="fa fa-user orange"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <select class="form-control" style="padding:6px 2px;" id="editgender">
                                                    <option value="">Select Gender</option>
                                                    <option value="1">Male</option>
                                                    <option value="0">Female</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="input-icon icon-right">
                                                    <input type="email" class="form-control" placeholder="raju533406@gmail.com" id="editemaladdress" data-toggle="tooltip" data-placement="left" data-original-title="EmailAddress" readonly style="cursor:default;">
                                                    <i class="fa fa-user blue"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="input-icon icon-right">
                                                    <input type="number" class="form-control" min="1" max="10" placeholder="Phone" id="editphone" data-toggle="tooltip" data-placement="right" data-original-title="Phone">
                                                    <i class="glyphicon glyphicon-earphone yellow"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="input-icon icon-right">
                                                    <input type="number" class="form-control" max="10" min="10" placeholder="Mobile" id="editmobile" data-toggle="tooltip" data-placement="left" data-original-title="Mobile">

                                                    <i class="glyphicon glyphicon-phone palegreen"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-sm-6" hidden>
                                            <input type="text" class="form-control" hidden id="editUsername">
                                            <input type="text" class="form-control" hidden id="editPassword">
                                            <input type="text" class="form-control" hidden id="editOtherName">
                                            <input type="text" class="form-control" hidden id="editWorkPhone">
                                            <input type="text" class="form-control" hidden id="editRoleID">
                                        </div>
                                    </div>

                                    <div class="form-title">
                                        <h5><strong>Contact Information</strong></h5>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="input-icon icon-right">
                                                    <input type="text" class="form-control" placeholder="Address1" id="editadd1" data-toggle="tooltip" data-placement="right" data-original-title="Address1">
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="input-icon icon-right">
                                                    <input type="text" class="form-control" placeholder="Address2 (Optional)" id="editadd2" data-toggle="tooltip" data-placement="left" data-original-title="Address2">
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="City" id="editCity" data-toggle="tooltip" data-placement="right" data-original-title="City">

                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <select class="form-control" style="padding:6px 2px;" id="editstate">
                                                    <option value="0">Select State</option>
                                                    <option value="1">Alabama</option>
                                                    <option value="2">Alaska</option>
                                                    <option value="3">California</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="input-icon icon-right">

                                                    <input type="text" data-mask="99999" class="form-control" placeholder="Zipcode" id="editzip" data-toggle="tooltip" data-placement="right" data-original-title="Zipcode">
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-md btn-primary center-block margin-btn" id="btnupdateprofile">Update Profile</button>
                                </form>
                            </div>
                            <div id="changepwd" class="tab-pane">
                                <form role="form" id="changepasswordtab">
                                    <div class="form-title">
                                        <h5><strong>Change Password</strong></h5>
                                    </div>
                                    <div class="row profile-data">
                                        <label for="inputEmail3" class="col-sm-2 control-label no-padding-right employee-inputcol">Current Password :</label>
                                        <div class="form-group">
                                            <div class="col-sm-3 col-sm-offset-1">
                                                <span class="input-icon icon-right">
                                                    <input type="password" class="form-control required" id="currentpassword" name="currentpassword" placeholder="Current Password"
                                                           data-bv-notempty="true"
                                                           data-bv-notempty-message="The current password is required and cannot be empty"
                                                           data-bv-identical="true">
                                                    <i class="fa fa-key blue"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row profile-data">
                                        <label for="inputEmail3" class="col-sm-2 control-label no-padding-right employee-inputcol">New Password :</label>
                                        <div class="form-group">
                                            <div class="col-sm-3 col-sm-offset-1">
                                                <span class="input-icon icon-right">
                                                    <input type="password" class="form-control" name="password" id="password" placeholder="New Password"
                                                           data-bv-notempty="true"
                                                           data-bv-notempty-message="The new password is required and cannot be empty"
                                                           data-bv-identical="true" />

                                                    <i class="fa fa-key orange"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row profile-data">
                                        <label for="inputEmail3" class="col-sm-2 control-label no-padding-right employee-inputcol">Confirm Password :</label>
                                        <div class="form-group">
                                            <div class="col-sm-3 col-sm-offset-1">
                                                <span class="input-icon icon-right">
                                                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password"
                                                           data-bv-notempty="true"
                                                           data-bv-notempty-message="The confirm password is required and cannot be empty"
                                                           data-bv-identical="true"
                                                           data-bv-identical-field="password"
                                                           data-bv-identical-message="Confirm password must match with new password."
                                                           data-bv-different="true"
                                                           data-bv-different-field="username"
                                                           data-bv-different-message="The password cannot be the same as username" />
                                                    <i class="fa fa-key azure"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <button type="button" class="btn btn-md btn-primary center-block margin-btn" id="btnSave">Update Password</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Page Body -->
